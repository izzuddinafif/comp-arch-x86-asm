;codewithshamse
;LCD Interfacing program

DATA SEGMENT
PORTA EQU 00H
PORTB EQU 02H
PORTC EQU 04H
PORT_CON EQU 06H
DATA ENDS
CODE SEGMENT
MOV AX,DATA
MOV DS, AX

ORG 0000H
START:

MOV DX, PORT_CON
MOV AL, 10000000B
OUT DX, AL


JMP XX

XX:

MOV AL,00H  ;command setting cursor
MOV DX,PORTC
OUT DX,AL
MOV AL, 0CH
MOV DX, PORTA
OUT DX,AL
MOV CX,00FFH; Delay
Delay0:loop Delay0
MOV AL,0FFH
MOV DX,PORTC
OUT DX,AL
MOV CX,00FFH; Delay
Delay1:loop Delay1

MOV AL,00H  ;command setting 8 bit mode
MOV DX,PORTC
OUT DX,AL
MOV AL, 038H
MOV DX, PORTA
OUT DX,AL
MOV CX,00FFH; Delay
Delay2:loop Delay2
MOV AL,0FFH
MOV DX,PORTC
OUT DX,AL
MOV CX,00FFH; Delay
Delay3:loop Delay3

XD:
MOV AL,00H  ;command setting 8 bit mode
MOV DX,PORTC
OUT DX,AL

MOV AL,0FFH  ;set rs to 1 to input data
MOV DX,PORTB
OUT DX,AL


MOV AL,'C'
MOV DX, PORTA
OUT DX,AL
MOV CX,00FFH; Delay
MOV AL,0FFH
MOV DX,PORTC
OUT DX,AL
MOV CX,00FFH; Delay

MOV AL,00H
MOV DX,PORTC
OUT DX,AL

MOV AL,'o'
MOV DX, PORTA
OUT DX,AL
MOV CX,00FFH; Delay
MOV AL,0FFH
MOV DX,PORTC
OUT DX,AL
MOV CX,00FFH; Delay

MOV AL,00H
MOV DX,PORTC
OUT DX,AL

MOV AL,'d'
MOV DX, PORTA
OUT DX,AL
MOV CX,00FFH; Delay
MOV AL,0FFH
MOV DX,PORTC
OUT DX,AL
MOV CX,00FFH; Delay

MOV AL,00H
MOV DX,PORTC
OUT DX,AL


MOV AL,'e'
MOV DX, PORTA
OUT DX,AL
MOV CX,00FFH; Delay
MOV AL,0FFH
MOV DX,PORTC
OUT DX,AL
MOV CX,00FFH; Delay

MOV AL,00H
MOV DX,PORTC
OUT DX,AL

MOV AL,'W'
MOV DX, PORTA
OUT DX,AL
MOV CX,00FFH; Delay
MOV AL,0FFH
MOV DX,PORTC
OUT DX,AL
MOV CX,00FFH; Delay

MOV AL,00H
MOV DX,PORTC
OUT DX,AL

MOV AL,'i'
MOV DX, PORTA
OUT DX,AL
MOV CX,00FFH; Delay
MOV AL,0FFH
MOV DX,PORTC
OUT DX,AL
MOV CX,00FFH; Delay

MOV AL,00H
MOV DX,PORTC
OUT DX,AL

MOV AL,'t'
MOV DX, PORTA
OUT DX,AL
MOV CX,00FFH; Delay
MOV AL,0FFH
MOV DX,PORTC
OUT DX,AL
MOV CX,00FFH; Delay

MOV AL,00H
MOV DX,PORTC
OUT DX,AL

MOV AL,'h'
MOV DX, PORTA
OUT DX,AL
MOV CX,00FFH; Delay
MOV AL,0FFH
MOV DX,PORTC
OUT DX,AL
MOV CX,00FFH; Delay

MOV AL,00H
MOV DX,PORTC
OUT DX,AL

MOV AL,'S'
MOV DX, PORTA
OUT DX,AL
MOV CX,00FFH; Delay
MOV AL,0FFH
MOV DX,PORTC
OUT DX,AL
MOV CX,00FFH; Delay

MOV AL,00H
MOV DX,PORTC
OUT DX,AL

MOV AL,'h'
MOV DX, PORTA
OUT DX,AL
MOV CX,00FFH; Delay
MOV AL,0FFH
MOV DX,PORTC
OUT DX,AL
MOV CX,00FFH; Delay

MOV AL,00H
MOV DX,PORTC
OUT DX,AL

MOV AL,'a'
MOV DX, PORTA
OUT DX,AL
MOV CX,00FFH; Delay
MOV AL,0FFH
MOV DX,PORTC
OUT DX,AL
MOV CX,00FFH; Delay

MOV AL,00H
MOV DX,PORTC
OUT DX,AL

MOV AL,'m'
MOV DX, PORTA
OUT DX,AL
MOV CX,00FFH; Delay
MOV AL,0FFH
MOV DX,PORTC
OUT DX,AL
MOV CX,00FFH; Delay

MOV AL,00H
MOV DX,PORTC
OUT DX,AL

MOV AL,'s'
MOV DX, PORTA
OUT DX,AL
MOV CX,00FFH; Delay
MOV AL,0FFH
MOV DX,PORTC
OUT DX,AL
MOV CX,00FFH; Delay

MOV AL,00H
MOV DX,PORTC
OUT DX,AL

MOV AL,'e'
MOV DX, PORTA
OUT DX,AL
MOV CX,00FFH; Delay
MOV AL,0FFH
MOV DX,PORTC
OUT DX,AL
MOV CX,00FFH; Delay
Delay31:loop Delay31

MOV AL,00H  ;command setting 8 bit mode
MOV DX,PORTC
OUT DX,AL

MOV AL,00H  ;set rs to 1 to input data
MOV DX,PORTB
OUT DX,AL
MOV AL,00H
MOV DX,PORTC
OUT DX,AL

MOV AL, 01H
MOV DX, PORTA
OUT DX,AL
MOV CX,00FFH; Delay
Delay32:loop Delay32
MOV AL,0FFH
MOV DX,PORTC
OUT DX,AL
MOV CX,00FFH; Delay
Delay33:loop Delay33
MOV AL,00H
MOV DX,PORTC
OUT DX,AL



JMP XD

CODE ENDS
END

